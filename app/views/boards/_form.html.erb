<% cancel_path = @board.id ? board_path(@board) : root_path %>
<% prevent_cancel_request = @board.id ? false: true %>

<%= turbo_frame_tag dom_id(@board, :inner), data: {
      controller: "eraser class-changer", eraser_selector_value: "#inner_board",
      eraser_prevent_value: prevent_cancel_request,
      class_changer_selector_value: "#add_board_btn",
      class_changer_class_value: "disabled" } do %>
  <%= form_with(model: @board) do |f| %>
    <% invalid = @board.errors.include?(:name) %>
    <%= f.text_field :name, class: "form-control #{'is-invalid' if invalid}", placeholder: "Board name" %>
    <% if invalid %>
      <% @board.errors.full_messages_for(:name).each do |m| %>
        <p class="my-0"><small class="text-danger"><%= m %></small></p>
      <% end %>
    <% end %>

    <% invalid = @board.errors.include?(:description) %>
    <%= f.text_area :description, class: "mt-3 form-control growing-text #{'is-invalid' if invalid}", placeholder: "Description",
      data: { controller: "auto-grow", action: "input->auto-grow#grow" } %>
    <% if invalid %>
      <% @board.errors.full_messages_for(:description).each do |m| %>
        <p class="my-0"><small class="text-danger"><%= m %></small></p>
      <% end %>
    <% end %>

    <div class="mt-3">
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <%= link_to "Cancel", cancel_path, class: "btn btn-secondary cancel-btn",
        data: { action: "click->class-changer#remove click->eraser#erase"} %>
    </div>
  <% end %>
<% end %>
