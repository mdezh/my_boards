<% cancel_path = @board.id ? board_path(@board) : cancel_new_board_path %>

<%= turbo_frame_tag dom_id(@board, :inner) do %>
  <%= form_with(model: @board) do |f| %>
    <% invalid = @board.errors.include?(:name) %>
    <%= f.text_field :name, class: "shadow form-control #{'is-invalid' if invalid}", placeholder: "Board name" %>
    <% if invalid %>
      <% @board.errors.full_messages_for(:name).each do |m| %>
        <p class="my-0"><small class="text-danger"><%= m %></small></p>
      <% end %>
    <% end %>

    <% invalid = @board.errors.include?(:description) %>
    <%= f.text_area :description, class: "mt-3 shadow form-control growing-text #{'is-invalid' if invalid}", placeholder: "Description",
      data: { controller: "auto-grow", action: "input->auto-grow#grow" } %>
    <% if invalid %>
      <% @board.errors.full_messages_for(:description).each do |m| %>
        <p class="my-0"><small class="text-danger"><%= m %></small></p>
      <% end %>
    <% end %>

    <div class="mt-3">
      <%= f.submit "Submit", class: "btn btn-primary shadow" %>
      <%= link_to "Cancel", cancel_path, class: "btn btn-secondary cancel-btn shadow", data: @board.id ? {} : {turbo_stream: ""} %>
    </div>
  <% end %>
<% end %>
