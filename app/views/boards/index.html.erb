<%= turbo_frame_tag 'boards' do %>
  <%= turbo_stream_from "boards" %>
  <div class="full-column d-flex flex-column">
    <div class="d-flex w-100 justify-content-between">
      <h1>Boards:</h1>
      <div data-controller="clicker class-changer" data-clicker-selector-value=".cancel-btn"
          data-class-changer-selector-value="#add_board_btn" data-class-changer-class-value="disabled">
        <%= render 'add_board_btn' %>
      </div>
    </div>

    <div id="board_list" class="items-list list-group list-group-flush flex-grow-1 mt-3 border text-bg-light">
      <% if @boards.empty? %>
        <%= render 'no_boards' %>
      <% else %>
        <%= render @boards %>
        <div id="boards_spinner" class="my-5 text-secondary text-center invisible">
          <div class="spinner-grow" style="width: 5rem; height: 5rem" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
