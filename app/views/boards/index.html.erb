<%= turbo_frame_tag 'boards_frame' do %>

  <%= turbo_stream_from "boards" %>

  <div class="full-column d-flex flex-column">
    <div class="d-flex w-100 justify-content-between">
      <h2>Boards:</h2>
      <div data-controller="clicker class-changer" data-clicker-selector-value=".cancel-btn"
          data-class-changer-selector-value="#add_board_btn" data-class-changer-class-value="disabled">
        <%= render 'add_board_btn' %>
      </div>
    </div>
    <div id="boards" class="items-list shadow list-group list-group-flush flex-grow-1 mt-3 border text-bg-light"
      data-controller="empty active" data-empty-hidden-class="hidden" data-active-frame-value="notes_frame"
      data-active-path-value="<%= root_path %>" data-active-selected-class="selected-board"
      data-active-active-value="<%= @active_board_id.nil? ? '' : dom_id(Board.new(id: @active_board_id)) %>">
      <%= render 'no_boards' %>
      <%= render @boards %>
      <div id="boards_spinner" class="mt-5 text-secondary text-center invisible" style="margin-bottom: 70%">
        <div class="spinner-grow" style="width: 5rem; height: 5rem" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>
    </div>
  </div>
<% end %>
