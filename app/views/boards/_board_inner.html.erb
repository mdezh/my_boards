<%= turbo_frame_tag dom_id(board, :inner) do %>
  <div class="hover-wrapper">
    <%= tag.div class: 'd-flex w-100 justify-content-between align-items-center hover-trigger' do %>
      <%= tag.button board.name, data: {
        controller: 'event',
        event_payload_value: {
          notes_loader: {
            id: board.id,
            path: root_path(board: board.id)
          }
        },
        action: 'event#fire'
      }, class: "h6 my-2 normal-height text-truncate btn btn-link stretched-link board-name" %>
      <%= tag.small class: 'text-secondary hidden', data: {
        controller: 'hide',
        hide_use_value: 'user_state',
        hide_check_value: "current_user == #{board.owner_id}"
      } do %>
        @<%= board.owner.nickname %>
      <% end %>
      <div class="hover-content-block shadow">
        <div class="btn-group" role="group">
          <%= link_to "", board, data: {
            turbo_method: :delete,
            controller: 'event',
            event_payload_value: {
              delete_board: board.id,
            },
            event_confirm_value: 'Are you sure?',
            action: 'event#fire'
          },
            class: "btn btn-danger btn-sm bi bi-trash", role: "button" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
