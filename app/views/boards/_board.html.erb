<div id="<%= dom_id(board) %>" class="list-group-item"
  data-empty-target="item"
  data-active-target="item"
  <% if @more_pages && board.id == @loading_trigger %>
    data-controller="lazy-loader"
    data-lazy-loader-src-value="<%= boards_path(cursor: @next_cursor) %>"
    data-lazy-loader-indicator-value="#boards_spinner"
  <% end %>
  <% if defined?(auto_scroll) %>
    data-controller="scroll-into-view"
  <% end %>
>
  <%= turbo_stream_from board %>
  <%= render "boards/board_inner", board: %>
</div>
