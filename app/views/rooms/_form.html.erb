<turbo-frame id="<%= dom_id(@room) %>">
  <%= form_with(model: @room) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit "Submit" %>
    <% cancel_path = @room.id ? room_path(@room) : root_path %>
    <%= link_to "Cancel", cancel_path, class: "cancel-btn" %>
  <% end %>
</turbo-frame>
