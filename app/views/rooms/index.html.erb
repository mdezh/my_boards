<div class="row mt-3 mb-5">
  <div class="col-md-5">
    <div class="d-flex w-100 justify-content-between mb-3">
      <h1>Rooms:</h1>
      <div data-controller="clicker class-changer" data-clicker-selector-value=".cancel-btn"
          data-class-changer-selector-value="#add_room_btn" data-class-changer-class-value="disabled">
        <%= render 'add_room_btn' %>
      </div>
    </div>

    <div id="room_list" class="list-group mt-3">
      <% if @rooms.empty? %>
        <%= render 'no_rooms' %>
      <% end %>
      <%= render @rooms %>
    </div>

    <div id="loading" class='mt-5 text-secondary text-center invisible' >
      <div class="spinner-grow" style="width: 5rem; height: 5rem" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
    </div>
  </div>
</div>
