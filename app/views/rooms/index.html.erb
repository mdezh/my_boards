<div class="row mt-3">
  <div class="col-md-5">
    <div class="d-flex w-100 justify-content-between mb-3">
      <h1>
        Rooms:
      </h1>
      <div>
        <%= render 'add_room_btn' %>
      </div>
    </div>

    <% if @rooms.empty? %>
      <div class="text-center text-secondary">
        <h5>No rooms now</h5>
      </div>
    <% end %>

    <div id="room_list" class="list-group mt-3">
      <%= render @rooms %>
    </div>
  </div>
</div>
