<%= form_with id: 'add_note', model: @board.notes.build,
  url: board_notes_path(board_id: @board.id), class: "mt-2 d-flex" do |f| %>
  <%= f.text_area :content, class: "form-control growing-text", placeholder: 'New note', rows: 1,
    data: { controller: "clear-value auto-grow", auto_grow_prev_value: "#notes",
            action: "keydown.esc->clear-value#clear input->auto-grow#grow keydown.esc->auto-grow#grow" } %>
  <%= f.button "", type: :submit, class: "btn btn-sm btn-primary ms-2 bi bi-plus-lg",
    data: {turbo_stream: "", controller: "clicker", clicker_selector_value: ".cancel-btn", action: "clicker#click"} %>
<% end %>
