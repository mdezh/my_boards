<%= turbo_frame_tag 'notes_frame' do %>
  <div class="full-column d-flex flex-column">
    <div id="notes" class="items-list-bottom list-group list-group-flush flex-grow-1 border text-bg-light"
      data-controller="scroll-bottom">
      <% if @notes.nil? %>
        <%= render 'not_selected' %>
      <% elsif @notes.empty? %>
        <%= render 'no_notes' %>
      <% else %>
        <%# <div id="notes_spinner" class="my-5 text-secondary text-center invisible"> %>
        <%#   <div class="spinner-grow" style="width: 5rem; height: 5rem" role="status"> %>
        <%#     <span class="visually-hidden">Loading...</span> %>
        <%#   </div> %>
        <%# </div> %>
        <%= render @notes %>
      <% end %>
    </div>
    <% if @board.present? %>
      <%= render 'add_form' %>
    <% end %>
  </div>
<% end %>
